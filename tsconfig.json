{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "removeComments": true,
    "outDir": "dist",
    
    "strict": true,
    "noImplicitAny": true,
    
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    },
    
    "esModuleInterop": true,
    
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*"
  ]
}
